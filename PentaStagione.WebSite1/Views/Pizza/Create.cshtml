@model PentaStagione.Repository.Contracts.ReadModel.DTOs.PizzaDto
@using PentaStagione.Common

@{
    ViewBag.Title = "Create Pizza";
}
<h2>@ViewBag.Title.</h2>

<script src="~/Scripts/ingredient/check.js"></script>

<div class="container">
    <form method="post">
        <div class="form-group">
            <label for="Name">Name:</label>
            <span class="error-message" asp-validation-for="Name"></span>
            <input type="text" class="form-control" id="Name" placeholder="The name of the pizza" name="Name">
        </div>
        <div class="form-group">
            <label for="Size">Select size:</label>
            <select class="form-control" id="Size" name="Size">
                @foreach (var size in Enum.GetValues(typeof(PizzaSize)))
                {
                    <option>@size</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Select Ingredients:</label>
            @for (int i = 0; i < Model.Ingredients.Count; i++)
            {
                <div class="radio">
                    <label>
                        <input type="checkbox" name="IngredientsBool[@i]" id="IngredientsBool[@i]" value="true">
                        <input name="IngredientsBool[@i]" type="hidden" value="false">
                        @Model.Ingredients[i].Name
                    </label>
                </div>
            }
        </div>
        <input type="hidden" name="Ingredients"/>
        <button type="submit" class="btn btn-default">Done!</button>
    </form>



</div>