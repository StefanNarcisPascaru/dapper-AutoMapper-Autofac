@model PentaStagione.Repository.Contracts.ReadModel.DTOs.PizzaIngredientDto
    
<div class="container">
    <form method="post">
        <div class="form-group">
            <label for="Name">Name:</label>
            <span class="error-message" asp-validation-for="Name"></span>
            <input type="text" class="form-control" id="Name" placeholder="The name of the ingredient" name="Name">
        </div>
        <div class="form-group">
            <label for="Name">Price:</label>
            <span class="error-message" asp-validation-for="Name"></span>
            <input type="text" class="form-control" id="Price" placeholder="The name of the ingredient" name="Price">
        </div>
        <button type="submit" class="btn btn-default">Done!</button>
    </form>



</div>